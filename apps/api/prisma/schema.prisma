// Quizzi Database Schema

generator client {
  provider      = "prisma-client-js"
  engineType    = "binary"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User/Player model
model User {
  id              String   @id @default(cuid())
  username        String   @unique
  avatar          String   @default("emoji_dog")
  elo             Int      @default(1000)
  rankTier        String   @default("bronze")
  winRate         Float    @default(0.0)
  currentStreak   Int      @default(0)
  longestStreak   Int      @default(0)
  matchesPlayed   Int      @default(0)
  matchesWon      Int      @default(0)
  matchesLost     Int      @default(0)
  avgResponseTime Int      @default(0)
  premiumStatus   Boolean  @default(false)
  isAnonymous     Boolean  @default(true)
  authToken       String?  @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([username])
  @@index([elo])
  @@index([authToken])
}

// Match model
model Match {
  id          String   @id @default(cuid())
  player1Id   String
  player2Id   String
  category    String
  winnerId    String?
  player1Score Int     @default(0)
  player2Score Int     @default(0)
  status      String   @default("pending") // pending, active, completed, abandoned
  createdAt   DateTime @default(now())
  completedAt DateTime?

  // Statistics tracking
  player1AvgResponseTime Int @default(0) // milliseconds
  player2AvgResponseTime Int @default(0) // milliseconds
  player1FastestAnswer   Int @default(0) // milliseconds
  player2FastestAnswer   Int @default(0) // milliseconds
  player1Accuracy        Int @default(0) // percentage (0-100)
  player2Accuracy        Int @default(0) // percentage (0-100)

  // ELO context tracking (Story 6.3)
  player1EloBefore       Int @default(0) // ELO rating before match
  player1EloAfter        Int @default(0) // ELO rating after match
  player1EloChange       Int @default(0) // ELO rating change
  player2EloBefore       Int @default(0) // ELO rating before match
  player2EloAfter        Int @default(0) // ELO rating after match
  player2EloChange       Int @default(0) // ELO rating change

  @@index([player1Id])
  @@index([player2Id])
  @@index([status])
  @@index([completedAt])
}

// Category Performance tracking
model CategoryPerformance {
  id            String   @id @default(cuid())
  userId        String
  category      String
  matchesPlayed Int      @default(0)
  matchesWon    Int      @default(0)
  winRate       Float    @default(0.0)
  avgResponseTime Int    @default(0)
  updatedAt     DateTime @updatedAt

  @@unique([userId, category])
  @@index([userId])
  @@index([category])
}

// Question model
model Question {
  id              String   @id @default(cuid())
  category        String
  difficulty      String   // easy, medium, hard
  questionText    String
  correctAnswer   String
  wrongAnswer1    String
  wrongAnswer2    String
  wrongAnswer3    String
  timesUsed       Int      @default(0)
  lastUsed        DateTime?
  createdAt       DateTime @default(now())

  @@index([category])
  @@index([difficulty])
  @@index([lastUsed])
}
