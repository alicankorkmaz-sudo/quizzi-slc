{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "composite": false,
    "incremental": false,
    "declaration": false,
    "declarationMap": false,
    "outDir": "./dist",
    "paths": {
      "@quizzi/types": ["../../packages/types/src"],
      "@quizzi/utils": ["../../packages/utils/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*"
  ]
}